<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#D5D5D5" />
            <corners android:radius="5dp" />
            <solid android:color="#ffffff"/>
            <padding android:right="5dp" />
